/* pages/blog-edit/blog-edit.wxss */

.container {
  padding: 20rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  /* justify-content: space-between; */
}

.content {
  width: 100%;
  min-height: 360rpx;
  border: 1px solid #ccc;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  padding: 20rpx;
}

.image-wrap {
  width: 200rpx;
  height: 200rpx;
  border: 1px dashed #ccc;
  position: relative;
  margin-bottom: 20rpx;
  margin-right: 24rpx;
  text-align: center;
}

.image-wrap > .icon-shanchu {
  position: absolute;
  right: 0;
  top: 0;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  background-color: rgba(0, 0, 0, 0.4);
  color: #fff;
}

.image-wrap > image {
  width: 100%;
  height: 100%;
}

.icon-jiahao {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.footer {
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
  background-color: #f1f1f1;
}

.words-num {
  flex: 1;
  margin-right: 20rpx;
  text-align: right;
}

.footer>.send-btn {
  background-color: #d43c33;
  color: #fff;
  font-size: 28rpx;
  /* width: 100rpx !important; */
  width: 130rpx;
  padding: 10rpx 0;
}
