/* pages/profile/profile.wxss */
page {
  background-color: #f1f1f1;
}
 
.userInfo {
  display: flex;
  flex-direction: column;
  height: 500rpx;
  align-items: center;
  justify-content: center;
  background-image: url(data:image/jpeg;base64,);
    background-size: cover;
}

.userAvatarUrl {
  width: 200rpx;
  height: 200rpx;
  display: block;
  overflow: hidden;
  border: 6rpx solid #fff;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.userNickName {
  font-size: 42rpx;
  color: #fff;
  /* color: rgba(255, 248, 248, 0.4); */
  box-shadow: 1px;
}

.nav {
  padding: 40rpx;
}

.nav-item {
  height: 120rpx;
  background-color: #fff;
}

.content {
  width: 100%;
  display: flex;
  align-items: center;
  padding: 0 40rpx;
  position: relative;
  border-bottom: 1px solid rgba(224, 216, 216, 0.685);
  height: 100%;
}

.content > text {
  color: rgb(99, 96, 96);
}

.content > .icon-shoucang, .icon-weibiaoti--, .icon-ziyuanldpi {
  color: #d43c43;
  font-size: 42rpx;
  margin-right: 20rpx;
}

.content > .icon-xiangyou {
  position: absolute;
right: 160rpx;
top: 48rpx;

}
