/* pages/blog-comment/blog-comment.wxss */

.comment-ctrl {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 99;
}

.card {
  margin-bottom: 20rpx;
}

.commentList {
  background-color: #fff;
  margin-bottom: 60rpx;
  margin-top: 20rpx;

  padding: 20rpx;
  box-sizing: border-box;
}

.commentList-item {
  margin-bottom: 20rpx;
  border-bottom: 1px solid #ccc;
}

.title {
  font-size: 40rpx;
  padding: 20rpx 0;
  color: #999;
  font-weight: 400;
}

.item-header {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.item-nickName {
  font-size: 30rpx;
  font-weight: 400;
}

.item-content {
  margin-bottom: 10rpx;
}

.item-header image {
  margin-right: 20rpx;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}

.time {
  font-size: 28rpx;
  color: #999;
}
