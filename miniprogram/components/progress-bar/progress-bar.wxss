/* components/progress-bar/progress-bar.wxss */

.container {
  display: flex;
  text-align: center;
  box-sizing: border-box;
}

.time {
width: 100rpx;
font-size: 30rpx;

  font-family: NotoSansHans-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  padding: 0 24rpx;
  line-height: 6rpx;
}

.control {
  position: relative;
  flex: 1;
  /* display: flex;
  align-items: center; */
}

.movable-area {
  width: 100%;
  height: 34rpx;
  position: absolute;
  bottom: -14rpx;
  left: 0;
}
.movable-view {
  width: 36rpx;
  height: 36rpx;
  background-color: #fefefe;
  border-radius: 50%;
}